<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keyWidth="12.5%p"
    android:keyHeight="7.5%p">
    <!--
android:horizontalGap="0.50%p"
android:verticalGap="0.50%p"
NOTE When we add a horizontalGap in pixels, this interferes with keyWidth in percentages adding up to 100%
NOTE When we have a horizontalGap (on Keyboard level) of 0, this make the horizontalGap (on Key level) to move from after the key to before the key... (I consider this a bug)
-->
    <Row>

        <Key
            android:codes="55006"
            android:keyLabel="clear" />
        <Key
            android:codes="-5"
            android:keyLabel="BACK"
            android:isRepeatable="true"/>
        <Key
            android:codes="1019"
            android:keyLabel='\u221A' />
        <Key
            android:codes="105"
            android:keyLabel="i" />
        <Key
            android:codes="40"
            android:keyLabel="("
            android:popupCharacters="([|"
            android:popupKeyboard="@layout/popup" />
        <Key
            android:codes="41"
            android:keyLabel=")"
            android:popupCharacters=")]|"
            android:popupKeyboard="@layout/popup" />
        <Key
            android:codes="94"
            android:keyLabel="^" />
        <Key
            android:codes="47"
            android:keyLabel="/" />
    </Row>
    <Row>

        <Key
            android:codes="1012"
            android:keyLabel="sin"
            android:popupKeyboard="@layout/sin_keyboard"/>
        <Key
            android:codes="1013"
            android:keyLabel="cos"
            android:popupKeyboard="@layout/cos_keyboard"/>
        <Key
            android:codes="1014"
            android:keyLabel="tan"
            android:popupKeyboard="@layout/tan_keyboard"/>
        <Key
            android:codes="0x03C0"
            android:keyLabel='\u03C0' />
        <Key
            android:codes="55"
            android:keyLabel="7" />
        <Key
            android:codes="56"
            android:keyLabel="8" />
        <Key
            android:codes="57"
            android:keyLabel="9" />
        <Key
            android:codes="42"
            android:keyLabel="*" />
    </Row>

    <Row>
        <Key
            android:codes="1015"
            android:keyLabel="der" />
        <Key
            android:codes="1001"
            android:keyLabel="log" />
        <Key
            android:codes="1000"
            android:keyLabel="ln" />
        <Key
            android:codes="101"
            android:keyLabel="e" />
        <Key
            android:codes="52"
            android:keyLabel="4" />
        <Key
            android:codes="53"
            android:keyLabel="5" />
        <Key
            android:codes="54"
            android:keyLabel="6" />
        <Key
            android:codes="45"
            android:keyLabel="-" />
    </Row>

    <Row>
        <Key
            android:codes="1006"
            android:keyLabel="min"
            android:popupKeyboard="@layout/min_max_keyboard"/>
        <Key
            android:codes="1007"
            android:keyLabel="floor"
            android:popupKeyboard="@layout/floor_ceil_keyboard"/>
        <Key
            android:codes="32"
            android:keyWidth="25%p"
            android:keyLabel="var1" />
        <Key
            android:codes="49"
            android:keyLabel="1" />
        <Key
            android:codes="50"
            android:keyLabel="2" />
        <Key
            android:codes="51"
            android:keyLabel="3" />
        <Key
            android:codes="43"
            android:keyLabel="+" />
    </Row>

    <Row>
        <Key
            android:codes="0x00B0"
            android:keyLabel='\u00B0' />
        <Key
            android:codes="33"
            android:keyLabel="!" />
        <Key
            android:codes="32"
            android:keyWidth="25%p"
            android:keyLabel="var2" />
        <Key
            android:codes="48"
            android:keyLabel="0" />
        <Key
            android:codes="46"
            android:keyLabel="." />
        <Key
            android:codes="44"
            android:keyLabel="," />
        <Key
            android:codes="10"
            android:keyLabel="DONE" />
    </Row>


</Keyboard>